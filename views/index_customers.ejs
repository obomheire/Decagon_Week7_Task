  <body>
    <div class="container">
      <h2><%= title %></h2>
      <table>
        <tr>
          <td> <a  href="/add" class="btn btn-sm btn-primary">Add New Customer</a></td>
          <td><a  href="/login" class="btn btn-sm btn-primary">Logout</a></td>
        </tr>
      </table>
     
      
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Customer ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
                <tr>
                    <td><%= customer.customerid %></td>
                    <td><%= customer.fullname %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.gender %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.notes %></td>
                    <td>
                        <a href="edit/<%=customer.customerid%>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="delete/<%=customer.customerid%>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
